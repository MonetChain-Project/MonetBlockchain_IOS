#import "FFTransactionRecordVC.h"
#import "RDPSegView.h"
#import "MJExtension.h"
#import "FFTransactionCell.h"
#import "RDPPopTableView.h"
#import "NATransactionItem.h"
#import "NATransactionCell.h"

@interface FFTransactionRecordVC ()<UITableViewDataSource, UITableViewDelegate>

@property (nonatomic, strong) Address *address;

@property (nonatomic, strong) UIView *topView;

@property (nonatomic, strong) NATextField *accountTF;

@property (nonatomic, strong) NATextField *addressTF;

@property (nonatomic, strong) UITableView *tableView;

@property (nonatomic, assign) NSInteger type;   //  0以太坊交易记录 1代币交易记录

@property (nonatomic, strong) NSMutableArray *dataSource;

@property (nonatomic, strong) RDPPopTableView *popTableView;

@property (nonatomic, strong) UIButton *rightBtn;

@end

@implementation FFTransactionRecordVC

- (NSMutableArray *)dataSource
{
    if (!_dataSource) {
        _dataSource = [NSMutableArray array];
    }
    return _dataSource;
}

- (RDPPopTableView *)popTableView
{
    if (!_popTableView) {
        
        _popTableView = [RDPPopTableView popView];
        CGRect rect = [_addressTF convertRect:_addressTF.bounds toView:LC_KEYWINDOW];
        _popTableView.startY = rect.origin.y + rect.size.height;
        
        __weak __typeof__ (self)weakSelf = self;
        _popTableView.selectedBlock = ^(Address *address) {
            
            _address = address;
            NSString *addressStr = address.checksumAddress;
            
            weakSelf.accountTF.text = [WALLET nicknameForAccount:address];
            weakSelf.addressTF.text = addressStr;
            
            weakSelf.rightBtn.selected = NO;
            
            [weakSelf loadData];
        };
        
        _popTableView.showBlockBlock = ^(BOOL show) {
            
            weakSelf.rightBtn.selected = show;
        };
        
    }
    return _popTableView;
}

- (void)viewWillAppear:(BOOL)animated
{
    [super viewWillAppear:animated];
    
    _address = WALLET.activeAccount;
    
    _accountTF.text = [WALLET nicknameForAccount:_address];
    
    NSString *addressStr = _address.checksumAddress;
    _addressTF.text = addressStr;
    
    [self loadData];
}

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    
    [self setupConfig];
    
    [self setupTop];
    
    [self setupBottom];
    
    
    //    @"^[0-9]*(\\.[0-9]{1,6})?$";
    //    [self loadData];
    
}

- (void)setupConfig
{
    _type = 0;
    self.title = @"Transaction records";
    _address = WALLET.activeAccount;
}

- (void)setupTop
{
    UIView *topView = [[UIView alloc] initWithFrame:CGRectMake(0, 64, ScreenWidth, 130)];
    topView.backgroundColor = [UIColor whiteColor];
    _topView = topView;
    [self.view addSubview:topView];
    
    _accountTF = [[NATextField alloc] initWithFrame:CGRectMake(20, 10, ScreenWidth - 20 * 2, 40)];
    UILabel *leftLbl = [[UILabel alloc] initWithFrame:CGRectMake(0, 0, 65, 40)];
    leftLbl.text = @"Account : ";
    leftLbl.textColor = [UIColor blackColor];
    leftLbl.font = NAFont(15);
    _accountTF.leftView = leftLbl;
    _accountTF.leftViewMode = UITextFieldViewModeAlways;
    _accountTF.placeholder = @"请输入账户名";
    _accountTF.font = NAFont(15);
    _accountTF.textColor = [UIColor blackColor];
    _accountTF.userInteractionEnabled = NO;
    
    UIButton *rightBtn = [UIButton buttonWithType:UIButtonTypeCustom];
    [rightBtn addTarget:self action:@selector(rightBtnClk:) forControlEvents:UIControlEventTouchUpInside];
    rightBtn.frame = CGRectMake(_accountTF.ddy_right - 30, 10, 30, 40);
    [rightBtn setImage:[UIImage imageNamed:@"transaction_down"] forState:UIControlStateNormal];
    [rightBtn setImage:[UIImage imageNamed:@"transaction_up"] forState:UIControlStateSelected];
    rightBtn.imageView.contentMode = UIViewContentModeCenter;
    _rightBtn = rightBtn;
    
    _addressTF = [[NATextField alloc] initWithFrame:CGRectMake(20, _accountTF.ddy_bottom + 10, ScreenWidth - 20 * 2, 40)];
    UILabel *leftLbl2 = [[UILabel alloc] initWithFrame:CGRectMake(0, 0, 65, 40)];
    leftLbl2.text = @"Address : ";
    leftLbl2.textColor = [UIColor blackColor];
    leftLbl2.font = NAFont(15);
    _addressTF.leftView = leftLbl2;
    _addressTF.leftViewMode = UITextFieldViewModeAlways;
    _addressTF.placeholder = @"请输入地址";
    _addressTF.font = NAFont(15);
    _addressTF.textColor = [UIColor clearColor];
    _addressTF.userInteractionEnabled = NO;
    _addressTF.contentLbl.hidden = NO;
    _addressTF.contentLbl.textColor = [UIColor blackColor];
    
    
    UIView *lightView = [[UIView alloc] init];
    lightView.backgroundColor = FFBackColor;
    lightView.frame = CGRectMake(0, _addressTF.ddy_bottom + 2, ScreenWidth, 10);
    
    RDPSegView *segView = [[RDPSegView alloc] initWithFrame:CGRectMake(0, lightView.ddy_bottom, ScreenWidth, 52)];
    segView.result = ^(NSInteger index) {
        
        _type = index;
        [self loadData];
    };
    
    [topView addSubview:_accountTF];
    [topView addSubview:rightBtn];
    [topView addSubview:_addressTF];
    [topView addSubview:lightView];
    [topView addSubview:segView];
    
    // 更新topview 的高度
    topView.ddy_h = segView.ddy_bottom;
    
}

- (void)rightBtnClk:(UIButton *)sender
{
    sender.selected = !sender.selected;
    
    [self.popTableView show];
    
}

- (void)setupBottom
{
    _tableView = [[UITableView alloc] initWithFrame:CGRectMake(0, _topView.ddy_bottom, ScreenWidth, ScreenHeight - 49 - _topView.ddy_bottom)];
    _tableView.backgroundColor = FFBackColor;
    _tableView.dataSource = self;
    _tableView.delegate = self;
    _tableView.rowHeight = 110;
    _tableView.tableFooterView = [[UIView alloc] init];
    
    [_tableView registerClass:[NATransactionCell class] forCellReuseIdentifier:@"NATransactionCell"];
    
    [self.view addSubview:_tableView];
}

- (void)loadData
{
    NSDictionary *params = @{@"address": _address.checksumAddress};
    
    NSString *action = (_type == 0 ? @"txlist" : @"fftTxlist");
    
    MBProgressHUD *hud0 = [self showHudWithText:@""];
    
    [NANetWorkRequest na_getDataWithModule:@"account" action:action parameters:params results:^(BOOL status, NSDictionary *result) {
        
        if (status) {
            
            NSArray *tempArray = [result objectForKey:@"data"];
            
            self.dataSource = [NATransactionItem mj_objectArrayWithKeyValuesArray:tempArray];
            
            [self.tableView reloadData];
            
            if (self.dataSource.count) {
                [self.tableView scrollToRowAtIndexPath:[NSIndexPath indexPathForRow:0 inSection:0] atScrollPosition:UITableViewScrollPositionTop animated:YES];
            }
            
        }
        
        [hud0 hideAnimated:YES];
        
    }];
}

#pragma mark - UITableViewDataSource
- (NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    return _dataSource.count;
}

- (UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    NATransactionCell *cell = [tableView dequeueReusableCellWithIdentifier:@"NATransactionCell"];
    cell.selectionStyle = UITableViewCellSelectionStyleNone;
    cell.type = _type;
    cell.transactionItem = _dataSource[indexPath.row];
    cell.backgroundColor = [UIColor whiteColor];
    
    return cell;
}

- (void)scrollViewDidScroll:(UIScrollView *)scrollView
{
    [self.view endEditing:YES];
}

@end


