- (void)photoViewDidEndZoom:(MJPhotoView *)photoView;

@end

@interface MJPhotoView : UIScrollView <UIScrollViewDelegate>

@property (nonatomic, strong) MJPhoto *photo;
@property (nonatomic, assign) BOOL isEditing;
